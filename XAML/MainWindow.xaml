<Window x:Class="XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello WPF" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="Aqua" Grid.Row="0" />
        <Rectangle Fill="Orange" Grid.Row="1" />
        <Rectangle Fill="Blue" Grid.Row="2" />
        
        <StackPanel Orientation="Horizontal">
            <Label Content="hello label" />
            <TextBox Text="no text here" />
        </StackPanel>
    </Grid>
</Window>
